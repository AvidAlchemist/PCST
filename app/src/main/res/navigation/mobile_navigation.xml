    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pcst.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_games"
        android:name="com.example.pcst.ui.games.GamesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/navigation_articles"
        android:name="com.example.pcst.ui.articles.ArticlesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_articles" />
